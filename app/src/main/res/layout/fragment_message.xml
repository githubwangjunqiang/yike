<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragment.home.HomeFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/message_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="9px"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/msg_text_top"/>


    <ImageView
        android:id="@+id/message_ivediting"
        android:layout_width="38px"
        android:layout_height="34px"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="43px"
        android:layout_marginRight="20px"
        android:layout_marginTop="43px"
        app:srcCompat="@drawable/ic_editing"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/message_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/message_tablayout"
        android:layout_marginTop="11px"
        android:background="@color/white"
        />

</RelativeLayout>
