<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunyou.yike.activity.SendFeelActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <include layout="@layout/top_title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.yunyou.yike.ui_view.DelayedClickImageView
                android:id="@+id/send_ivimage0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                app:layout_auto_basewidth="height"
                app:srcCompat="@drawable/ic_control_point_black_24dp"
                />

            <com.yunyou.yike.ui_view.DelayedClickImageView
                android:id="@+id/send_ivimage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                app:layout_auto_basewidth="height"
                app:srcCompat="@drawable/ic_control_point_black_24dp"
                />

            <com.yunyou.yike.ui_view.DelayedClickImageView
                android:id="@+id/send_ivimage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                app:layout_auto_basewidth="height"
                app:srcCompat="@drawable/ic_control_point_black_24dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/send_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:background="@color/white"
            android:gravity="top"
            android:hint="@string/qingshuruneieroing"
            android:inputType="text"
            android:maxLength="500"
            android:minHeight="300px"
            android:padding="20px"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color_alp"
            android:textSize="28px"
            />

        <com.yunyou.yike.ui_view.DelayedClickButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:background="@color/app_color"
            android:onClick="subMitImage"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="28px"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20px"
        app:layout_behavior="@string/bottom_sheet_behavior"
        >

        <com.yunyou.yike.ui_view.DelayedClickButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:id="@+id/sendfeel_photo"
            android:background="@color/background"
            android:text="@string/paizhao"/>

        <com.yunyou.yike.ui_view.DelayedClickButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30px"
            android:id="@+id/sendfeel_album"
            android:background="@color/background"
            android:text="@string/xiangce"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
