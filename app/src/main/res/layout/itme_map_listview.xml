<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/itme_maplistview_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/itme_map_tv"
            android:drawableRight="@drawable/seecked_loaction"
            android:gravity="start"
            android:lineSpacingExtra="14px"
            android:padding="20px"
            android:textColor="@color/text_color"
            android:textSize="28px"
            tools:text="北京市通州区东方国际大厦\n地铁六号线吧通信与i好心"/>

        <TextView
            android:id="@+id/itme_map_lkist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10px"
            tools:text="0"
            android:textColor="#28bd61"
            android:textSize="28px"
            />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/itme_loading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        />


</RelativeLayout>