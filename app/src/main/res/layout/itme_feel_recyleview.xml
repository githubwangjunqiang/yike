<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="20px"
              android:paddingRight="20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itme_feel_iviamge"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@mipmap/a1"
            fresco:failureImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@mipmap/pressagebar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:roundAsCircle="true"
            />

        <TextView
            android:id="@+id/itme_feel_tvname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:textColor="@color/text_color"
            android:textSize="28px"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/itme_feel_tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="20px"
            tools:text="@string/app_name"/>

    </LinearLayout>

    <TextView
        android:id="@+id/itme_feel_tvcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10px"
        android:textColor="@color/text_color"
        android:textSize="25px"
        tools:text="@string/app_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itme_feel_iv0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@mipmap/a1"
            fresco:failureImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@mipmap/pressagebar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:roundAsCircle="false"
            fresco:viewAspectRatio="1.1"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itme_feel_iv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@mipmap/a1"
            fresco:failureImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@mipmap/pressagebar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:roundAsCircle="false"
            fresco:viewAspectRatio="1.1"
            />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itme_feel_iv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="1"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@mipmap/a1"
            fresco:failureImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:progressBarImage="@mipmap/pressagebar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:roundAsCircle="false"
            fresco:viewAspectRatio="1.1"
            />
    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_marginBottom="20px"-->
    <!--android:layout_marginTop="20px"-->
    <!--android:background="@color/Background"/>-->

</LinearLayout>