<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunyou.yike.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/home_loaction_iv"
            android:layout_width="19px"
            android:layout_height="26px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="47px"
            app:srcCompat="@drawable/ic_loaction" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11px"
            android:layout_marginTop="48px"
            android:layout_toRightOf="@+id/home_loaction_iv"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="25px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingTop="35px">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yikezhuangshi" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="74px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_zhaogongren" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="26px"
                android:layout_marginTop="25px"
                android:text="@string/zhaogongren"
                android:textColor="@color/text_color"
                android:textSize="25px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="74px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_zhaogongzuoi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="26px"
                android:layout_marginTop="25px"
                android:text="@string/zhaogongzuo"
                android:textColor="@color/text_color"
                android:textSize="25px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="74px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_jiancaidaojia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="26px"
                android:layout_marginTop="25px"
                android:text="@string/jiancaidaojia"
                android:textColor="@color/text_color"
                android:textSize="25px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="74px"
                android:layout_height="74px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27px"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_gonsi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="26px"
                android:layout_marginTop="25px"
                android:text="@string/gongsi"
                android:textColor="@color/text_color"
                android:textSize="25px" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
