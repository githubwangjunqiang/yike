<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <com.yunyou.yike.ui_view.MyCardView
        android:id="@+id/itme_cardlayout"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#309B8A"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        >


        <TextView
            android:id="@+id/itme_banktvname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25px"
            android:drawableLeft="@mipmap/bankimage"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="28px"
            tools:text="@string/app_name"
            />

        <TextView
            android:id="@+id/itme_banktvnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25px"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="28px"/>
    </com.yunyou.yike.ui_view.MyCardView>
    <RadioButton
        android:id="@+id/btn_itme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="10dp"
        android:elevation="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        />


</FrameLayout>